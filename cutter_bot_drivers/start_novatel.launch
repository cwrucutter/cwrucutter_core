<launch>
  <!-- Launch the Novatel GPS Driver node --> 
  <node pkg="novatel_gps_driver" type="novatel_gps_driver.py" name="driver_novatel">
    <param name="port" value="$(arg port)" type="string"/>
    <param name="baud" value="57600" type="int"/>
  </node>

  <!-- Publish the static transform from base_link to gps -->
  <node pkg="tf" type="static_transform_publisher" name="tf_publisher_gps" args=".4 0 0 0 0 0 base_link gps 100"/>
</launch>
